<p id="notice"><%= notice %></p>

<h1>Listing Contains</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Ingredient</th>
      <th>Amount</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contains.each do |contain| %>
      <tr>
        <td><%= contain.recipe %></td>
        <td><%= contain.ingredient %></td>
        <td><%= contain.amount %></td>
        <td><%= contain.unit %></td>
        <td><%= link_to 'Show', contain %></td>
        <td><%= link_to 'Edit', edit_contain_path(contain) %></td>
        <td><%= link_to 'Destroy', contain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

