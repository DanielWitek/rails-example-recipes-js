<style>
  .multi {
     column-count:3;
  }
</style>

<% content_for :heading do %>
  <h1>Suche</h1>
<% end %>


<h2>Nach dem Namen des Rezeptes</h2>

<%= form_tag recipes_path, :method => :get do %>
  <div class="field">
    <label>Name des Rezepts: <%= text_field_tag :search %></label>
  </div>
  <div class="actions">
    <%= submit_tag "Suchen" %>
  </div>
<% end %>

