<%= form_tag recipes_path, :method => :get do %>
  <div class="field multi">
    <% Ingredient.all.each do |ingredient| %>
      <label>
        <%= check_box_tag "wanted_ingredient_ids[]", ingredient.id %>
        <%= ingredient.name %>
      </label>
      <br>
    <% end %>
  </div>

  <div class="actions">
    <%= submit_tag "Suchen" %>
